{
  "manifest_version": 2,
  "name": "Dyslexia Reader",
  "version": "1.0",
  "description": "Alternates font colors between black, red and blue",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "main.js"],
      "css": ["font.css", "main.css"]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"]
}
